[Unit]
Description=Telegram bot 'telebot_ipt_access'
After=syslog.target
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/var/www/telegram_bot/telebot_ipt_access
ExecStart=/usr/bin/python3 /var/www/telegram_bot/telebot_ipt_access/telebot_ipt_access.py
RestartSec=10
Restart=always

[Install]
WantedBy=multi-user.target
